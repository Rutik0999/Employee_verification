@model Employee_verification.Models.tblemployee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style>
        .card {
            margin: auto;
            margin-top: 50px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #B799FF;
            color: #fff;
        }

        .card-title {
            font-family: 'Times New Roman';
            font-size: 1.5rem;
            font-weight: 600;
            text-align: center;
        }

        .card-body {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .btn-login {
            background-color: #4CAF50;
            color: #fff;
        }

        .msg {
            text-align: center;
            font-size: 10px;
        }

        .container {
            width: 30vw;
        }
    </style>

   
   
</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
  {
    <div class="container my-4">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Login Form</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Employee Code:</label>
                    @Html.TextBoxFor(e => e.employee_code, new { @class = "form-control", placeholder = "Enter Employee Code", @id= "txtecode"})
                </div>

                <div class="form-group">
                    <label>Password:</label>
                    @Html.PasswordFor(e => e.pass, new { @class = "form-control", placeholder = "Enter Password", @id = "txtpass"})
                </div>
            </div>

            <div class="card-footer">
                <div class="form-group">
                    <button class="btn btn-outline-primary btn-block" type="submit">Login</button>
                    @Html.ActionLink("Back", "Create", "Emp_Verify", null, new { @class = "btn btn-outline-warning btn-block", onsubmit = "return validation()" })
                </div>
                <div class="msg">
                    <h5>@ViewBag.msg</h5>
                </div>
            </div>
        </div>
     </div>
   }
</body>
</html>
